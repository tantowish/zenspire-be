generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  practitioner
  user
}

enum Mood {
  sangat_baik
  baik
  biasa
  buruk
  sangat_buruk
}

enum Gender {
  P
  L
}

model User {
  id                Int              @id @default(autoincrement())
  first_name        String           @db.VarChar(255)
  last_name         String?          @db.VarChar(255)
  email             String           @unique @db.VarChar(255)
  password          String           @db.VarChar(255)
  experience_points Int              @default(0)
  isAnonymous       Boolean          @default(false)
  role              Role             @default(user)
  created_at        DateTime         @default(now())
  updated_at        DateTime         @updatedAt
  chatAI            ChatAI?
  practitioner      Practitioner?
  discussion        Discussion[]
  comment           Comment[]
  journal           Journal[]
  discussionLike    DiscussionLike[]
  post              Post[]
  UserData          UserData?

  @@map("users")
}

model UserData {
  id               Int      @id @default(autoincrement())
  user_id          Int      @unique
  user             User     @relation(fields: [user_id], references: [id])
  gender           Gender
  birthday         DateTime
  health_condition String[]
  preferences      String[]
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@map("user_datas")
}

model Practitioner {
  id             Int     @id @default(autoincrement())
  user_id        Int     @unique
  user           User    @relation(fields: [user_id], references: [id])
  university     String? @db.VarChar(255)
  no_str         String? @db.VarChar(255)
  no_hp          String  @db.VarChar(255)
  nik            String? @db.VarChar(16)
  alamat_praktek String? @db.Text

  @@map("practitioners")
}

model ChatAI {
  id           Int      @id @default(autoincrement())
  user_id      Int      @unique
  user         User     @relation(fields: [user_id], references: [id])
  history_chat Json
  ai_analisis  String?  @db.Text
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("chat_ai")
}

model Discussion {
  id             Int              @id @default(autoincrement())
  user_id        Int
  user           User             @relation(fields: [user_id], references: [id])
  kategori       String[]
  title          String           @db.VarChar(255)
  body           String           @db.Text
  image          String?          @db.VarChar(255)
  created_at     DateTime         @default(now())
  updated_at     DateTime         @updatedAt
  comment        Comment[]
  discussionLike DiscussionLike[]

  @@map("discussions")
}

model DiscussionLike {
  user_id       Int
  user          User       @relation(fields: [user_id], references: [id])
  discussion_id Int
  discussion    Discussion @relation(fields: [discussion_id], references: [id], onDelete: Cascade)

  @@id([user_id, discussion_id])
  @@map("discussion_likes")
}

model Comment {
  id            Int        @id @default(autoincrement())
  user_id       Int
  user          User       @relation(fields: [user_id], references: [id])
  discussion_id Int
  discussion    Discussion @relation(fields: [discussion_id], references: [id], onDelete: Cascade)
  body          String     @db.Text
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt

  @@map("comments")
}

model Post {
  id         Int      @id @default(autoincrement())
  user_id    Int
  user       User     @relation(fields: [user_id], references: [id])
  title      String   @db.VarChar(255)
  body       String   @db.Text
  image      String?  @db.VarChar(255)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("posts")
}

model Journal {
  id         Int        @id @default(autoincrement())
  user_id    Int
  user       User       @relation(fields: [user_id], references: [id])
  mood       Mood
  title      String     @db.VarChar(100)
  question_1 String     @db.Text
  question_2 String     @db.Text
  question_3 String     @db.Text
  question_4 String     @db.Text
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  JournalAI  JournalAI?

  @@map("journals")
}

model JournalAI {
  id         Int      @id @default(autoincrement())
  journal_id Int      @unique
  journal    Journal  @relation(fields: [journal_id], references: [id], onDelete: Cascade)
  body       String   @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("journal_ai")
}
